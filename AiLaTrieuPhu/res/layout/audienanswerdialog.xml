<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center|center_vertical"
              android:layout_gravity="center|center_vertical"
              android:background="#00000000"
              android:layout_width="match_parent"
              android:layout_height="370dp">

    <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_gravity="center|bottom"
            android:background="@drawable/atp__activity_player_layout_help_call_audience_background"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_width="300dp"
            android:layout_height="300dp">
        <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="250dp">
            <TextView
                    android:id="@+id/tv_percent_case_a"
                    android:gravity="center|bottom"
                    android:background="#fff000"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            <TextView
                    android:id="@+id/tv_percent_case_b"
                    android:gravity="center|bottom"
                    android:background="#fff000"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            <TextView
                    android:id="@+id/tv_percent_case_c"
                    android:gravity="center|bottom"
                    android:background="#fff000"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            <TextView
                    android:id="@+id/tv_percent_case_d"
                    android:gravity="center|bottom"
                    android:background="#fff000"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
        </LinearLayout>
        <ImageView
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
        <LinearLayout
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:text="A"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:text="B"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:text="C"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:text="D"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|center_vertical"
            android:textColor="#000fff"
            android:text="Ý kiến khán giả"
            android:textSize="15dp"
            android:background="@drawable/atp__activity_player_layout_help_call_title_background"
            android:gravity="center|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

</RelativeLayout>